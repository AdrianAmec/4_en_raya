<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" minHeight="500.0" minWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.CtrlPlay">
   <children>
      <VBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label fx:id="title" alignment="CENTER" text="Test game">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Canvas fx:id="canvas" height="25.0" width="25.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <Label fx:id="turno" alignment="CENTER" layoutX="218.0" layoutY="52.0" text="Test game">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Button fx:id="buttonExit" disable="true" layoutX="14.0" layoutY="52.0" mnemonicParsing="false" onAction="#backLobby" prefHeight="53.0" prefWidth="122.0" text="Volver al lobby" visible="false" />
   </children>
</AnchorPane>
